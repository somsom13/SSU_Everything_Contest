<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/northGameNCharac"
            android:layout_width="50dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/north_charac_normal"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <ProgressBar
            android:id="@+id/northProgress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:progressDrawable="@drawable/north_food_game_nbar"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/northGameNeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#D05654"
        android:layout_gravity="center"
        android:fontFamily="@font/gowunbatang_regular"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/northGameFoodImage"
        android:layout_width="350dp"
        android:layout_height="350dp"
        app:srcCompat="@drawable/food_4"
        android:layout_gravity="center"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/southProgress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:progressDrawable="@drawable/north_food_game_sbar"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:id="@+id/northGameSCharac"
            android:layout_width="50dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/south_charac_normal"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/northGameSeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/purple_700"
        android:layout_gravity="center"
        android:fontFamily="@font/gowunbatang_regular"
        android:gravity="center"/>
</LinearLayout>