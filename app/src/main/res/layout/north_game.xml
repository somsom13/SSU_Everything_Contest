<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ExtraText">


    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_weight="1"
        android:background="#ff0000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/60"
            android:textColor="#ffffff"/>

        <ImageButton
            android:id="@+id/homeIconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/home_icon"
            android:background="#00ffffff"
            app:tint="@color/white" />
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@android:drawable/editbox_background_normal"
            app:tint="@color/purple_200"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="27dp" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/middle"
        android:layout_width="match_parent"
        android:layout_height="709dp"
        android:layout_weight="5"
        android:background="@drawable/north_soongsil"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/character1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cute" />


        <TextView
            android:id="@+id/northSay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="북한동기가 하는 말" />

        <ImageView
            android:id="@+id/character2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cute" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical" >

        <LinearLayout
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:background="#00ff00"
             android:layout_weight="1">
            <TextView
                android:id="@+id/choose1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="선택지1" />
            />
            <TextView
            android:id="@+id/choose2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="선택지2" />
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="#0000ff"
            android:layout_weight="1">
            <TextView
                android:id="@+id/choose3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="선택지3" />
            />
            <TextView
                android:id="@+id/choose4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="선택지4" />
        </LinearLayout>
    />
    </LinearLayout>
</LinearLayout>